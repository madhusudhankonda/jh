<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.madhusudhan.jh.associations.many2many">
    <class name="Student" table="STUDENT">
        <id  name="id" column="STUDENT_ID">
            <generator class="native"/>
        </id>
        <set name="courses" inverse="true" table="STUDENT_COURSE" lazy="false" cascade="all">
            <key column="STUDENT_ID"/>
            <many-to-many class="Course" column="COURSE_ID"/>
        </set>
        <property name="name" column="FIRST_NAME" />
    </class>
</hibernate-mapping>
